#include <iostream>

using namespace std;

int main()
{
    int value1,value2,value3;
    int minValue;
    cout << "Enter value 1: ";
    cin>> value1;
    if(!cin){
        cout << "Wrong input" << endl;
        return 1;
    }
    cout << "Enter value 2: ";
    cin>> value2;
    if(!cin){
        cout << "Wrong input" << endl;
        return 1;
    }
    cout << "Enter value 3: ";
    cin>> value3;
    if(!cin){
        cout << "Wrong input" << endl;
        return 1;
    }

    minValue = value1;
    if (minValue > value2 ) minValue =value2;
    if (minValue > value3 ) minValue =value3;
    cout << "Min value is " << minValue << endl;

    return 0;
}
