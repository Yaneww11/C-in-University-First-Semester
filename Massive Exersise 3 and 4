    cout << "Enter value" << i + 1 << ": ";
    cin >> arr[i];
    if(arr[i] == x)
  countX++;
  if( arr[i] >= 0){
            sum = sum + arr[i];
        } else
        br++;

  }
  for(int i = 0; i < n; i++){
    cout << arr[i] << " ";

  }
  cout << endl;
 cout << "Sum: " << sum << endl;
cout << "br: " << br << endl;
  if(countX == 0){
    cout << "This number is not in the massive";
  }
  else
    cout << "Counter of " << x << " in this massive is " << countX;
